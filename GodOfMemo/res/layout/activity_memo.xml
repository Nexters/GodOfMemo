<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memo_activiy_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    tools:context=".MemoActivity" >

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0" />

  <LinearLayout
        android:id="@+id/memo_layout_body"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="45" />

        <EditText
            android:id="@+id/memo_title"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:layout_weight="100"
            android:background="@android:color/transparent"
            android:ems="4"
            android:gravity="top"
            android:hint="@string/memo_title"
            android:inputType="textShortMessage"
            android:lineSpacingExtra="6dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/memo_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="250"
            android:background="@android:color/transparent"
            android:ems="4"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="6dp"
            android:padding="15dp"
            android:hint="@string/memo_contents"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/memo_time"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_weight="50"
            android:padding="10dp"
            android:text="2014년 02월 15일 오후 02:00"
            android:textSize="9sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="45" />
        
        <TextView
            android:id="@+id/memo_color_picker_headline"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_weight="50"
            android:padding="10dp"
            android:text="메모 색깔"
            android:textSize="13sp" />

        <HorizontalScrollView
            android:id="@+id/memo_color_picker_hsv"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="65" >

            <LinearLayout
                android:id="@+id/memo_color_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        

        
        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50" />
        
                <TextView
            android:id="@+id/bg_color_picker_headline"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_weight="50"
            android:padding="10dp"
            android:text="그룹 색깔"
            android:textSize="13sp" />

        <HorizontalScrollView
            android:id="@+id/bg_color_picker_hsv"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="65" >

            <LinearLayout
                android:id="@+id/bg_color_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="135"
            android:background="@drawable/btn_delete" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="45" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

</LinearLayout>