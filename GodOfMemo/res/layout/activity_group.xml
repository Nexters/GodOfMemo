<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/memedit_background"
    tools:context=".MemoActivity" >

    <ImageView
        android:id="@+id/trash_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/group_img"
        android:layout_toRightOf="@+id/group_img"
        android:background="@drawable/trashcan_btn_selector" />

    <!-- 그룹 이름 회색 배경 -->
    <RelativeLayout
        android:id="@+id/group_name"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/group_title" >

        <!-- 그룹 이름 수정하는 곳 -->

        <EditText
            android:id="@+id/group_name_text"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="center"
            android:hint="그룹이름을 여기에 적으세요"
            android:paddingLeft="15dp" />
    </RelativeLayout>

    <!-- 바 움직이라는 텍스트 -->

    <TextView
        android:id="@+id/seekBarAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_name"
        android:layout_below="@+id/group_name"
        android:layout_marginTop="15dp"
        android:text="아래 Bar를 움직여보세요."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Seek bar -->

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/seekBarAction"
        android:layout_marginTop="19dp"
        android:max="100" />

    <!-- 그룹 이미지 -->

    <RelativeLayout
        android:id="@+id/group_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/seekBarAction"
        android:layout_below="@+id/seekBar"
        android:background="@drawable/group_red"
        android:gravity="top"
        android:orientation="horizontal" >
    </RelativeLayout>

</RelativeLayout>