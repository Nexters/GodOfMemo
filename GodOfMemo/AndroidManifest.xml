<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexters.godofmemo"
    android:versionCode="1"
    android:versionName="1.0"
     >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <!-- OPENGL설정 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- DB사용위해 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 메모 선택시 진동 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.nexters.godofmemo.MainActivity"
            android:label="메모보드" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nexters.godofmemo.MemoActivity"
            android:label="@string/title_activity_memo" >
        </activity>
        <activity
            android:name="com.nexters.godofmemo.RevisedActivity"
            android:label="@string/title_activity_revised" >
        </activity>
    </application>

</manifest>